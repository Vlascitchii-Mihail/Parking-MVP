<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Button style-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/mulish_900</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/tint_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_btn_secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Toolbar style-->
    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Input style-->
    <style name="Input"></style>

    <style name="Input.Primary">
        <item name="android:paddingHorizontal">@dimen/padding_medium</item>
        <item name="android:textColorHint">@color/black_30</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <!--    TextInputLayout style-->
    <style name="TextInputLayout">
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">@color/black_60</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Button style-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/mulish_900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_btn_secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>